<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">
    <title>Do stuff</title>
    <script
  src = "https://code.jquery.com/jquery-3.5.1.min.js"
  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
  crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/assets/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
  <body>
    <div class="card-style">

      <div class="welcome-image">
        <img src="/assets/todologo.jpg" alt="">
      </div>

      <div class="input-container">
        <form id = "input-form">
          <span><input class = "task-input" id = "taskTextField" name = "item" placeholder="Add new task" required/></span>
          <input class ="add-task-button" type="submit" name="" value="Add Task">
        </form>
      </div>

      <div class="task-container">
        <p>UNCOMPLETED</p>
        <div class="uncomleted">
          <ul id = "uncompletedTaskList">
            <% todo.forEach((item) => { %>
              <% if (item['status'] === 'pending') { %>
                <li class = "list-item">
                    <input class = "completion-check" type= "radio" name = "checkbox" onchange="moveTask()" unchecked>
                    <label class = "uncompleted-style"> <%= item['item'] %> </label>
                    <button class = "deletion-button" type= "button" onclick="deleteTask(this)"> <span class = "fa fa-trash fa-lg"></span> </button>
                </li>
              <% } %>
            <% }); %>
          </ul>
        </div>
        <p>COMPLETED</p>
        <div class="comleted">
          <ul id = "completedTaskList">
              <% todo.forEach((item) => { %>
                <% if (item['status'] === 'completed') { %>
                  <li class = "list-item">
                      <input class = "completion-check" type= "radio" name = "checkbox" onchange="moveTask()" unchecked>
                      <label class = "completed-style"> <%= item['item'] %> </label>
                      <button class = "deletion-button" type= "button" onclick="deleteTask(this)"><span class = "fa fa-trash fa-lg"></span></button>
                  </li>
                <% } %>
              <% }); %>
          </ul>
        </div>
      </div>



    </div>
    <script src="/assets/engine.js"></script>
  </body>
</html>
